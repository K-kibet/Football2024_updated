<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/serverOne"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:layout_margin="10dp"
            android:drawableEnd="@drawable/live"
            android:text="Server One"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/serverTwo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:layout_margin="10dp"
            android:drawableEnd="@drawable/live"
            android:text="Server Two"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/serverThree"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:layout_margin="10dp"
            android:drawableEnd="@drawable/live"
            android:text="Server Three"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/adViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>